/** 全局样式 **/
page {
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  font-size: 32rpx;
  color: #1d2129;
  line-height: 1.5;
}

/* 通用组件样式 */
.container {
  width: 100%;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 按钮样式 */
.btn-primary {
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #1677ff;
  color: white;
  border-radius: 45rpx;
  font-size: 34rpx;
  margin: 30rpx auto;
  box-shadow: 0 4rpx 10rpx rgba(22, 119, 255, 0.2);
  transition: all 0.3s;
}

.btn-primary:active {
  background-color: #0f62d9;
  box-shadow: 0 2rpx 5rpx rgba(22, 119, 255, 0.3);
  transform: translateY(2rpx);
}

.btn-disabled {
  background-color: #c9d8f0;
  color: #ffffff;
  box-shadow: none;
  transform: none;
}

/* 输入框样式 */
.input-group {
  width: 90%;
  margin: 0 auto;
  padding: 30rpx 0;
}

.input-item {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
  background-color: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.03);
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  opacity: 0.7;
}

.input-content {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  color: #1d2129;
}

.input-placeholder {
  color: #86909c;
  font-size: 32rpx;
}

/* 加载动画 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #e5e9f2;
  border-top-color: #1677ff;
  border-radius: 50%;
  animation: spin 1.2s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #86909c;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态样式 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 60rpx 0;
  text-align: center;
}

.empty-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 34rpx;
  color: #1d2129;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #86909c;
  line-height: 1.6;
}
