<view class="container">
  <view class="header">
    <text class="title">我的报告</text>
    <button class="user-btn" bindtap="goToUserInfo">
      <image src="/images/user-btn.png" mode="widthFix"></image>
    </button>
  </view>

  <!-- 加载中 -->
  <view wx:if="{{loading}}" class="loading">
    <van-loading type="spinner" color="#1677ff" size="40rpx" />
    <text>加载中...</text>
  </view>

  <!-- 错误状态 -->
  <view wx:elif="{{error}}" class="error">
    <image src="/images/error.png" mode="widthFix"></image>
    <text>{{errorMsg}}</text>
    <button bindtap="refreshReports">重新加载</button>
  </view>

  <!-- 空状态 -->
  <view wx:elif="{{empty}}" class="empty">
    <image src="/images/empty.png" mode="widthFix"></image>
    <text>暂无报告数据</text>
  </view>

  <!-- 报告列表 -->
  <view wx:else class="report-list">
    <view class="report-item" wx:for="{{reports}}" wx:key="id" bindtap="viewReport" data-report="{{item}}">
      <view class="report-header">
        <text class="report-title">{{item.Name}}</text>
<text class="report-date">{{item.Time}}</text>
      </view>
      <view class="report-hospital">
        <text>检测机构：未知机构</text> <!-- 后端数据没有提供医院信息 -->
      </view>
      <view class="report-footer">
        <text class="report-status">已完成</text> <!-- 后端数据没有提供状态信息 -->
        <image src="/images/arrow-right.png" mode="widthFix" class="arrow"></image>
      </view>
    </view>
  </view>
</view>
