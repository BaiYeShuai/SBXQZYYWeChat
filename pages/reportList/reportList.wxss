.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.user-btn {
  width: 60rpx;
  height: 60rpx;
  padding: 0;
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-btn image {
  width: 60rpx;
  height: 60rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.error, .empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 0;
}

.error image, .empty image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
}

.error text, .empty text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.error button {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #1677ff;
  color: #fff;
  font-size: 28rpx;
  border-radius: 35rpx;
  padding: 0;
}

.report-list {
  padding: 20rpx 30rpx;
}

.report-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.report-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.report-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  max-width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.report-date {
  font-size: 24rpx;
  color: #999;
}

.report-hospital {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f5f5f5;
}

.report-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.report-status {
  font-size: 26rpx;
  color: #1677ff;
}

.arrow {
  width: 28rpx;
  height: 28rpx;
}
