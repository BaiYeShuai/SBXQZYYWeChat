/* pages/reportList/reportList.wxss */
.report-list-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 导航栏 */
.navbar {
  height: 100rpx;
  background-color: #1677ff;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  padding-top: 20rpx;
}

.navbar .title {
  color: #fff;
  font-size: 36rpx;
  font-weight: 500;
}

.logout-btn {
  position: absolute;
  right: 30rpx;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 15rpx;
  border-radius: 6rpx;
  background-color: rgba(255,255,255,0.2);
}

/* 搜索区域 */
.search-container {
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  padding: 0 30rpx;
  background-color: #fff;
  height: 80rpx;
  align-items: center;
  border-bottom: 1px solid #f0f0f0;
}

.filter-item {
  display: flex;
  align-items: center;
  color: #333;
  font-size: 28rpx;
  padding-right: 30rpx;
  position: relative;
}

.filter-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 15rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 1px;
  height: 30rpx;
  background-color: #eee;
}

.filter-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
  transition: transform 0.3s;
}

.filter-reset {
  color: #1677ff;
  font-size: 26rpx;
  margin-left: auto;
  padding: 5rpx 15rpx;
  border-radius: 15rpx;
  background-color: rgba(22, 119, 255, 0.1);
}

/* 筛选弹窗 */
.popup-title {
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  border-bottom: 1px solid #eee;
}

.filter-options {
  padding: 20rpx 0;
}

.filter-option {
  padding: 25rpx 30rpx;
  font-size: 28rpx;
  text-align: center;
  border-bottom: 1px solid #f5f5f5;
}

.filter-option.active {
  color: #1677ff;
  background-color: rgba(22, 119, 255, 0.05);
}

.popup-confirm {
  margin: 20rpx 30rpx;
  height: 90rpx;
  background-color: #1677ff;
  color: #fff;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

/* 报告列表 */
.report-list {
  padding: 20rpx 30rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 0;
}

.empty-img {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-btn {
  width: 240rpx;
  height: 80rpx;
  background-color: #1677ff;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

/* 报告项 */
.report-item {
  background-color: #fff;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  transition: transform 0.2s;
}

.report-item:active {
  transform: scale(0.99);
}

.report-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.report-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  max-width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.report-date {
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.report-type {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
}

.type-tag {
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.type-physical {
  background-color: rgba(52, 199, 89, 0.1);
  color: #34c759;
}

.type-test {
  background-color: rgba(0, 122, 255, 0.1);
  color: #007aff;
}

.type-imaging {
  background-color: rgba(255, 149, 0, 0.1);
  color: #ff9500;
}

.type-consultation {
  background-color: rgba(153, 102, 255, 0.1);
  color: #9966ff;
}

.report-hospital {
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}

.report-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.report-status {
  font-size: 26rpx;
  color: #1677ff;
}

.report-arrow {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.5;
}

/* 刷新提示 */
.refresh-tip {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 20rpx 0 40rpx;
}
