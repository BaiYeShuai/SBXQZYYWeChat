.page-container {
  background-color: #f5f7fa;
  min-height: 100vh;
  padding-top: 100rpx; /* 避开导航栏 */
}

/* 导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #1677ff;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  z-index: 10;
}

.nav-title {
  font-size: 36rpx;
  color: white;
  font-weight: 500;
}

.nav-back {
  position: absolute;
  left: 30rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 36rpx;
  height: 36rpx;
}

/* 搜索和筛选区域 */
.search-filter-container {
  padding: 20rpx 30rpx;
  background-color: #f5f7fa;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: white;
  border-radius: 80rpx;
  padding: 0 30rpx;
  height: 80rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.03);
}

.search-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 15rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
}

.clear-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-icon {
  width: 20rpx;
  height: 20rpx;
  opacity: 0.5;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  overflow: hidden;
}

.filter-item {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #333;
  margin-right: 15rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.03);
}

.filter-icon {
  width: 20rpx;
  height: 20rpx;
  margin-left: 8rpx;
  opacity: 0.5;
}

.reset-filter {
  font-size: 26rpx;
  color: #1677ff;
  padding: 10rpx 15rpx;
  margin-left: auto;
}

/* 报告列表 */
.report-list {
  padding: 10rpx 0 40rpx;
}

.list-item {
  width: 90%;
  margin: 0 auto 20rpx;
  padding: 30rpx;
  background-color: white;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.03);
  position: relative;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.item-title {
  font-size: 34rpx;
  color: #1d2129;
  font-weight: 500;
  line-height: 1.3;
  width: 70%;
}

.item-tag {
  padding: 5rpx 15rpx;
  background-color: #e6f4ea;
  color: #00b42a;
  font-size: 24rpx;
  border-radius: 20rpx;
}

.item-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-time {
  font-size: 28rpx;
  color: #86909c;
}

.info-type {
  font-size: 26rpx;
  color: #666;
  background-color: #f5f7fa;
  padding: 3rpx 15rpx;
  border-radius: 15rpx;
  width: fit-content;
}

.item-arrow {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 30rpx;
  height: 30rpx;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
  opacity: 0.5;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 150rpx;
}

.empty-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.7;
}

.empty-text {
  font-size: 34rpx;
  color: #1d2129;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #86909c;
  margin-bottom: 60rpx;
  text-align: center;
  padding: 0 60rpx;
}

/* 下拉刷新提示 */
.refresh-tip {
  padding: 20rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #86909c;
}

/* 筛选弹窗 */
.filter-popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.filter-popup {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  z-index: 101;
  padding: 30rpx;
}

.popup-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #1d2129;
  padding: 10rpx 0 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.filter-options {
  padding: 20rpx 0;
  max-height: 500rpx;
  overflow-y: auto;
}

.filter-option {
  padding: 25rpx 20rpx;
  font-size: 32rpx;
  color: #333;
  text-align: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.filter-option.selected {
  color: #1677ff;
  background-color: #f0f7ff;
}

.popup-confirm {
  margin-top: 20rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #1677ff;
  color: white;
  border-radius: 45rpx;
  font-size: 34rpx;
}
