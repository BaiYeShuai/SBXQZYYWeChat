.page-container {
  background-color: #f5f7fa;
  min-height: 100vh;
  padding-top: 100rpx; /* 避开导航栏 */
}

/* 导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #1677ff;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  z-index: 10;
}

.nav-title {
  font-size: 36rpx;
  color: white;
  font-weight: 500;
}

.nav-back {
  position: absolute;
  left: 30rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 36rpx;
  height: 36rpx;
}

/* 用户信息卡片 */
.user-card {
  background-color: white;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.avatar-container {
  position: relative;
  margin-right: 30rpx;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  object-fit: cover;
  border: 4rpx solid #f0f0f0;
}

.edit-avatar {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #1677ff;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid white;
}

.edit-icon {
  width: 20rpx;
  height: 20rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.user-id, .user-phone {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 5rpx;
}

/* 表单样式 */
.info-form {
  padding-bottom: 60rpx;
}

.form-section {
  background-color: white;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  color: #999;
  padding: 25rpx 0;
  border-bottom: 1px solid #f5f5f5;
}

.form-item {
  display: flex;
  align-items: center;
  height: 100rpx;
  border-bottom: 1px solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.item-label {
  width: 160rpx;
  font-size: 30rpx;
  color: #333;
}

.item-input {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  color: #333;
  text-align: right;
}

.item-value {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  text-align: right;
}

.picker-view {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  text-align: right;
}

.item-action {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #1677ff;
}

/* 带点击事件的表单项 */
.action-item {
  justify-content: space-between;
  padding-right: 10rpx;
}

.cache-size {
  font-size: 28rpx;
  color: #999;
  margin-right: 20rpx;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
}

/* 按钮样式 */
.save-btn {
  margin-top: 40rpx;
}

.logout-btn {
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: white;
  color: #ff4d4f;
  border-radius: 45rpx;
  font-size: 34rpx;
  margin: 20rpx auto;
  border: 1px solid #ff4d4f;
}

.logout-btn:active {
  background-color: #fff1f0;
}

/* 加载状态 */
.loading-container {
  padding-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 错误状态 */
.error-container {
  padding-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-left: 60rpx;
  padding-right: 60rpx;
  text-align: center;
}

.error-img {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
  opacity: 0.7;
}

.error-text {
  font-size: 32rpx;
  color: #86909c;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.retry-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #1677ff;
  color: white;
  border-radius: 40rpx;
  font-size: 30rpx;
}
    