<view class="container">
  <view class="logo">
    <image src="/images/logo.png" mode="widthFix"></image>
    <text class="title">医疗报告查询系统</text>
  </view>

  <form class="form">
    <view class="form-item">
      <view class="form-label">身份证号</view>
      <input 
        class="form-input" 
        placeholder="请输入18位身份证号" 
        value="{{IdCard}}"
        bindinput="inputIdCard"
        maxlength="18"
        type="text"
      ></input>
    </view>

    <view class="form-item">
      <view class="form-label">手机号</view>
      <input 
        class="form-input" 
        placeholder="请输入手机号" 
        value="{{PhoneNumber}}"
        bindinput="inputPhone"
        maxlength="11"
        type="number"
      ></input>
    </view>

    <view class="form-item">
      <view class="form-label">验证码</view>
      <input 
        class="form-input verify-code" 
        placeholder="请输入6位验证码" 
        value="{{Code}}"
        bindinput="inputCode"
        maxlength="6"
        type="number"
      ></input>
      <button 
        class="verify-btn" 
        bindtap="getCode"
        disabled="{{codeDisabled || countdown > 0}}"
      >
        {{codeText}}
      </button>
    </view>

    <button 
      class="submit-btn" 
      bindtap="searchReport"
      disabled="{{searchDisabled}}"
    >
      查询报告
    </button>
  </form>

  <view class="tips">
    <text>温馨提示：请输入本人信息进行查询</text>
  </view>
</view>
