.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0 60rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  background-color: white;
  padding: 20rpx;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #1d2129;
  margin-bottom: 15rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #86909c;
}

/* 验证码按钮 */
.code-btn {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
  font-size: 28rpx;
  background-color: #e8f3ff;
  color: #1677ff;
  margin-left: 10rpx;
}

.code-btn-active {
  background-color: #e5e9f2;
  color: #86909c;
}

/* 安全提示 */
.security-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 60rpx;
  padding: 0 30rpx;
}

.lock-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
  opacity: 0.6;
}

.tip-text {
  font-size: 24rpx;
  color: #86909c;
  line-height: 1.5;
}
