/* 顶部装饰条 */
.top-decoration {
  height: 12rpx;
  background: linear-gradient(90deg, #1677ff, #4096ff);
  width: 100%;
}

.login-container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
  margin-bottom: 60rpx;
  position: relative;
}

.login-header::after {
  content: '';
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  background-color: rgba(22, 119, 255, 0.05);
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: -1;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  border-radius: 50%;
  box-shadow: 0 8rpx 20rpx rgba(22, 119, 255, 0.15);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
}

.login-form {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  flex: 1;
}

.input-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.input-label {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  padding-left: 10rpx;
}

.input-wrapper {
  position: relative;
  width: 100%;
}

.input-icon {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 36rpx;
  height: 36rpx;
  opacity: 0.6;
}

.input-field {
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 30rpx 0 86rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  border: 1px solid #eee;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.input-field:focus {
  border-color: #1677ff;
  outline: none;
  box-shadow: 0 0 0 4rpx rgba(22, 119, 255, 0.1);
}

.verify-code {
  flex-direction: row;
  align-items: flex-start;
  gap: 20rpx;
}

.code-input {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.get-code-btn {
  width: 250rpx;
  height: 90rpx;
  background-color: #f0f7ff;
  color: #1677ff;
  border-radius: 16rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 34rpx;
  transition: all 0.2s ease;
}

.get-code-btn:not([disabled]):hover {
  background-color: #e6f0ff;
}

.get-code-btn[disabled] {
  background-color: #f5f5f5;
  color: #999;
}

/* 登录按钮容器 - 确保整体居中 */
/* 登录按钮样式调整 */
.login-btn-container {
  width: 100%;
  margin-top: 20rpx;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(90deg, #1677ff, #4096ff);
  color: #fff;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  /* 关键：设置按钮内文本居中 */
  display: flex;
  align-items: center;
  justify-content: center;
  /* 移除默认内边距影响 */
  padding: 0;
  line-height: normal;
  
  box-shadow: 0 6rpx 16rpx rgba(22, 119, 255, 0.2);
  transition: all 0.2s ease;
  border: none;
}

/* 确保文本在按钮内绝对居中 */
.btn-text {
  display: inline-block;
  vertical-align: middle;
}

.login-btn:not([disabled]):active {
  transform: scale(0.98);
  box-shadow: 0 3rpx 8rpx rgba(22, 119, 255, 0.15);
}

.login-btn[disabled] {
  background: #96c6ff;
  box-shadow: none;
}

.login-tips {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-top: 10rpx;
  text-align: center;
  min-height: 30rpx;
  line-height: 1.5;
}

/* 温馨提示样式 */
.warm-tips {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.tips-title {
  color: #1677ff;
  font-weight: 600;
  margin-bottom: 15rpx;
  font-size: 26rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.tips-item {
  position: relative;
  padding-left: 30rpx;
}

.tips-item::before {
  content: '';
  position: absolute;
  left: 10rpx;
  top: 14rpx;
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  background-color: #999;
}

.tips-item.important {
  color: #ff7d00;
  font-weight: 500;
}

.login-footer {
  margin-top: 40rpx;
  margin-bottom: 60rpx;
  text-align: center;
  padding-top: 20rpx;
}

.login-footer text {
  font-size: 24rpx;
  color: #999;
}

/* 加载动画 */
.loading {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(4rpx);
}

.custom-loading {
  width: 50rpx;
  height: 50rpx;
  border: 5rpx solid rgba(255,255,255,0.3);
  border-top-color: #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading text {
  color: white;
  font-size: 28rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}
    