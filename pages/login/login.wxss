/* pages/login/login.wxss */
.login-container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
  margin-bottom: 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
}

.login-form {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.input-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.input-label {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.input-field {
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  border: 1px solid #eee;
}

.input-field:focus {
  border-color: #1677ff;
  outline: none;
}

.verify-code {
  flex-direction: row;
  align-items: flex-start;
  gap: 20rpx;
}

.code-input {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.get-code-btn {
  width: 220rpx;
  height: 90rpx;
  background-color: #f0f7ff;
  color: #1677ff;
  border-radius: 16rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 34rpx; /* 与输入框标签高度对齐 */
  touch-action: manipulation; /* 优化点击体验 */
}

/* 可点击状态的按钮样式 */
.get-code-btn:not([style*="background-color: #f5f5f5"]) {
  cursor: pointer;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  background-color: #1677ff;
  color: #fff;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  margin-top: 40rpx;
  line-height: 1;
  touch-action: manipulation; /* 优化点击体验 */
}

/* 禁用状态的按钮样式 */
.login-btn[style*="background-color: #96c6ff"] {
  opacity: 0.7;
}

.login-tips {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-top: 10rpx;
  text-align: center;
}

.login-footer {
  margin-top: auto;
  margin-bottom: 60rpx;
  text-align: center;
}

.login-footer text {
  font-size: 24rpx;
  color: #999;
}

/* 加载动画 */
.loading {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.custom-loading {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #eee;
  border-top-color: #1677ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading text {
  color: white;
  font-size: 28rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}
