.page-container {
  background-color: #ffffff;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

/* 导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #1677ff;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  z-index: 10;
}

.nav-title {
  font-size: 36rpx;
  color: white;
  font-weight: 500;
}

.nav-back {
  position: absolute;
  left: 30rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-actions {
  position: absolute;
  right: 30rpx;
  display: flex;
  align-items: center;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
}

.action-text {
  color: white;
  font-size: 28rpx;
  margin-right: 10rpx;
}

.back-icon, .menu-icon {
  width: 36rpx;
  height: 36rpx;
}

/* 在线预览容器 */
web-view {
  width: 100%;
  height: 100%;
  padding-top: 100rpx; /* 避开导航栏 */
  box-sizing: border-box;
}

/* 下载查看模式容器 */
.download-view {
  width: 100%;
  height: 100%;
  padding-top: 100rpx; /* 避开导航栏 */
  box-sizing: border-box;
}

/* 加载状态 */
.loading-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f5f7fa;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #e5e9f2;
  border-top-color: #1677ff;
  border-radius: 50%;
  animation: spin 1.2s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #86909c;
}

/* 错误状态 */
.error-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 60rpx 0;
  text-align: center;
  background-color: #f5f7fa;
}

.error-img {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
  opacity: 0.7;
}

.error-text {
  font-size: 32rpx;
  color: #86909c;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.retry-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #1677ff;
  color: white;
  border-radius: 40rpx;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.switch-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: white;
  color: #1677ff;
  border: 1px solid #1677ff;
  border-radius: 40rpx;
  font-size: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
