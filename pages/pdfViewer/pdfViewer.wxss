.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
}

.back-btn, .menu-btn {
  width: 60rpx;
  height: 60rpx;
  padding: 0;
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  justify-content: center;
}

.back-btn image, .menu-btn image {
  width: 36rpx;
  height: 36rpx;
}

.title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.view-mode-switch {
  display: flex;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
}

.mode-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  background: transparent;
  font-size: 28rpx;
  color: #666;
  padding: 0;
  position: relative;
}

.mode-btn.active {
  color: #1677ff;
}

.mode-btn.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: #1677ff;
}

web-view {
  flex: 1;
  width: 100%;
}

.loading, .error, .downloading, .download-success {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading text, .downloading text, .download-success text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.error image, .download-success image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
}

.error text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.error button, .download-success button {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #1677ff;
  color: #fff;
  font-size: 28rpx;
  border-radius: 35rpx;
  padding: 0;
  margin-top: 20rpx;
}
